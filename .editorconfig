# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set charset for .js and .ts files
[*.{js,ts}]
charset = utf-8

# 2 space indentation for .json, .js, .ts, etc.
[*.{json,js,ts}]
indent_style = space
indent_size = 2

# Ensure no tabs are used anywhere
[*]
indent_style = space